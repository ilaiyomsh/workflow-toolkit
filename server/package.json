{
  "name": "@workflow-toolkit/server",
  "version": "1.0.0",
  "description": "Express server for Workflow Toolkit",
  "type": "module",
  "main": "src/app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "concurrently --names \"server,tunnel\" --prefix-colors \"cyan,magenta\" \"nodemon src/app.js\" \"mapps tunnel:create -p 8080 -a 10787086\"",
    "server": "nodemon src/app.js",
    "tunnel": "mapps tunnel:create -p 8080 -a 10787086",
    "deploy": "mapps code:push -a 10787086",
    "logs": "mapps code:logs -i 10787086 -s live -t console",
    "logs:http": "mapps code:logs -i 10787086 -s live -t http"
  },
  "dependencies": {
    "@workflow-toolkit/formula-engine": "workspace:*",
    "@workflow-toolkit/shared": "workspace:*",
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.0"
  }
}
